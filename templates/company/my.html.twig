{% extends 'base.html.twig' %}

{% block title %}Создание компании{% endblock %}

{% block body %}
    {% if form.vars.data %}
        <h2 class="mb-5">
            Редактировать компанию
        </h2>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-lg btn-primary" type="submit">
            Изменить описание
        </button>

        <a class="btn btn-lg btn-danger" href="{{ path('app_company_delete', {'id' :  form.vars.data.id}) }}">
            Удалить компанию
        </a>

    {% else %}
        <h2 class="mb-5">
            Создать компанию
        </h2>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-lg btn-primary" type="submit">
            Создать
        </button>
    {% endif %}

    {{ form_end(form) }}

{% endblock %}
